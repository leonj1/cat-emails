FROM python:3.9-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy necessary files
COPY models/ ./models/
COPY email_providers/ ./email_providers/
COPY tests/test_email_integration.py ./tests/
COPY tests/test_mailfrom_integration.py ./tests/

# Set the entrypoint
ENTRYPOINT ["python", "tests/test_email_integration.py"]