{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Gmail Fetcher - Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gmail_fetcher.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--hours",
                "1"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Gmail Fetcher Service - Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gmail_fetcher_service.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Web Dashboard - Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/web_dashboard.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false,
            "args": [
                "--port",
                "8080",
                "--debug"
            ]
        },
        {
            "name": "API Service - Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api_service.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Send Summary Report - Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/send_summary_report.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Email Scanner Producer - Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/email_scanner_producer.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Email Scanner Consumer - Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/email_scanner_consumer.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Current File - Debug",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                "tests",
                "-p",
                "test_*.py",
                "-v"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Python: Debug Current Test File",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "${relativeFileDirname}.${fileBasenameNoExtension}"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        }
    ]
}