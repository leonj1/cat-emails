{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug gmail_fetcher.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gmail_fetcher.py",
            "args": [
                "--base-url", "10.1.1.247:11434",
                "--hours", "2"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONUNBUFFERED": "1"
            },
            "stopOnEntry": false,
            "justMyCode": false,
            "subProcess": true,
            "redirectOutput": true,
            "showReturnValue": true,
            "purpose": ["debug-in-terminal"]
        },
        {
